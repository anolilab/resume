{
    "name": "@anolilab/resume",
    "version": "0.0.0",
    "private": true,
    "description": "My personal resume",
    "repository": {
        "type": "git",
        "url": "https://github.com/anolilab/resume.git"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de",
        "url": "https://www.danielbannert.com"
    },
    "sideEffects": false,
    "scripts": {
        "audit": "audit-ci --config ./audit-ci.jsonc",
        "build": "tsc && cross-env NODE_ENV='production' vite build",
        "build:pdf": "esno ./bin/build-pdf.ts",
        "clean": "rimraf node_modules dist",
        "commit": "cz",
        "dev": "vite",
        "download:resume": "esno ./bin/download-resume-gist.ts",
        "lint": "pnpm run lint:text && pnpm run lint:prettier && pnpm run lint:eslint",
        "lint:fix": "pnpm run lint:text:fix && pnpm run lint:prettier:fix && pnpm run lint:eslint:fix",
        "lint:commits": "pnpm commitlint --from HEAD~1 --to HEAD --verbose",
        "lint:eslint": "eslint .",
        "lint:eslint:fix": "eslint . --fix",
        "lint:prettier": "prettier --config=.prettierrc.cjs '**/*.{js,jsx,tsx,ts,less,md,json,html}'",
        "lint:prettier:fix": "prettier --config=.prettierrc.cjs --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
        "lint:secrets": "secretlint **/*",
        "lint:text": "textlint ./.github/ISSUE_TEMPLATE/** ./README.md ./UPGRADE.md --experimental --dry-run",
        "lint:text:fix": "textlint ./.github/ISSUE_TEMPLATE/** ./README.md ./UPGRADE.md --experimental --fix",
        "prepare": "is-ci || (node verify-node-version.cjs && pnpx only-allow pnpm && husky install)",
        "serve": "vite preview",
        "sort-package-json": "sort-package-json ./package.json",
        "test": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@anolilab/resume-schema": "2.0.3",
        "@fontsource/noto-sans-sc": "^5.2.8",
        "@fontsource/nunito": "^5.2.7",
        "@octokit/rest": "^22.0.1",
        "ajv": "^8.17.1",
        "ajv-formats": "^3.0.1",
        "date-fns": "^4.1.0",
        "deepmerge": "^4.3.1",
        "esno": "^4.8.0",
        "gravatar": "^1.8.2",
        "lodash.capitalize": "^4.2.1",
        "puppeteer": "^24.34.0"
    },
    "devDependencies": {
        "@anolilab/eslint-config": "^19.0.0",
        "@anolilab/prettier-config": "^8.0.1",
        "@anolilab/semantic-release-preset": "^13.0.0",
        "@anolilab/textlint-config": "^11.1.0",
        "@commitlint/cli": "^20.3.1",
        "@commitlint/config-conventional": "^20.3.1",
        "@eslint/css": "^0.14.1",
        "@tailwindcss/postcss": "catalog:",
        "@types/gravatar": "^1.8.6",
        "@types/lodash.capitalize": "^4.2.9",
        "audit-ci": "^7.1.0",
        "c8": "^10.1.3",
        "commitizen": "^4.3.1",
        "cross-env": "^10.1.0",
        "cssnano": "^7.1.2",
        "eslint": "9.39.2",
        "handlebars": "^4.7.8",
        "husky": "^9.1.7",
        "is-ci": "^4.1.0",
        "lint-staged": "^16.2.7",
        "postcss": "^8.5.6",
        "prettier": "^3.7.4",
        "semantic-release": "^25.0.2",
        "sort-package-json": "^3.6.0",
        "tailwindcss": "catalog:",
        "textlint": "^15.5.0",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vite-plugin-favicon2": "^1.1.5",
        "vite-plugin-handlebars": "^2.0.0",
        "vite-plugin-static-copy": "^3.1.4",
        "vitest": "^4.0.16",
        "@vitest/coverage-v8": "4.0.16"
    },
    "packageManager": "pnpm@10.27.0",
    "engines": {
        "node": ">=20.19"
    }
}
